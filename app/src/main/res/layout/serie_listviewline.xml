<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/background">
    
    <TextView
        android:id="@+id/ligneNom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/block_login"
        android:layout_marginLeft="2dp"/> <!-- android:text="Nom"  -->


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ligneEditeur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_marginLeft="5dp"/> <!-- android:text="Editeur" -->

        <ImageView
            android:id="@+id/ligneFlagStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/flag_green" 
            android:layout_marginLeft="5dp"
            android:contentDescription="@string/flag"
            android:layout_marginRight="5dp"/>
         
        <TextView
            android:id="@+id/ligneTotalVolumes"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_marginRight="3dp" 
            android:layout_toLeftOf="@id/ligneFlagStatus"/><!-- android:text="25 vol." -->


        <TextView
            android:id="@+id/ligneType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_toLeftOf="@id/ligneTotalVolumes" 
            android:layout_toRightOf="@id/ligneEditeur" 
            android:gravity="right"
            android:layout_marginRight="50dp"/><!-- android:text="Type" -->

    </RelativeLayout>

</LinearLayout>