<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/background">
    
    <TextView
        android:id="@+id/ligneSerieDetailNom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/block_login"
        android:layout_marginLeft="2dp"/> 


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ligneSerieDetailLieuAchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_marginLeft="5dp"/> 
            
        
        <TextView
            android:id="@+id/ligneSerieDetailDateAchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" 
            android:gravity="right"/>

        <TextView
            android:id="@+id/ligneSerieDetailPrixAchat"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_marginRight="25dp" 
            android:layout_toLeftOf="@id/ligneSerieDetailDateAchat"
            android:layout_toRightOf="@id/ligneSerieDetailLieuAchat" />



    </RelativeLayout>

</LinearLayout>